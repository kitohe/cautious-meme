@model Identity.API.Models.AccountViewModels.LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-3">
    <div>
        <partial name="_ValidationSummary" />
        <div class="row justify-content-center">
            <div class="col-sm-6">
                <div>
                    <h3>Login</h3>
                    <div>
                        <form asp-action="Login" asp-controller="Account" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                            <input type="hidden" asp-for="ReturnUrl" />

                            <fieldset>
                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <input class="form-control"asp-for="Email" autofocus>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input type="password" class="form-control" asp-for="Password" autocomplete="off">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="RememberMe">
                                        <input asp-for="RememberMe">
                                        <strong>Remember My Login</strong>
                                    </label>
                                </div>

                                <p>
                                    <a asp-action="ForgotPassword" asp-controller="Account" asp-route-returnurl="@ViewData["ReturnUrl"]">
                                        Forgot password?
                                    </a>
                                </p>
                                <p>
                                    Don't have account yet?
                                    <a asp-action="Register" asp-controller="Account" asp-route-returnurl="@ViewData["ReturnUrl"]">
                                        Register here
                                    </a>
                                </p>

                                <button class="btn btn-outline-primary" name="button" value="login">Login</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
